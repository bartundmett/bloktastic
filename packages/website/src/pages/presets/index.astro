---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PackageCard from '../../components/PackageCard.astro';
import { extractSlug, getPresets } from '../../lib/registry';

const presets = getPresets().sort((a, b) => a.title.localeCompare(b.title));
---

<BaseLayout title="Presets" description="Storyblok preset packs combining multiple bloks for fast project setup.">
  <section class="container-shell py-12">
    <header class="mb-10 max-w-3xl">
      <p class="mb-3 inline-flex rounded-full bg-paper px-4 py-2 text-xs font-bold uppercase tracking-[0.14em] text-slate-600">
        Preset Directory
      </p>
      <h1 class="font-display text-4xl font-extrabold text-graphite lg:text-5xl">Preset Packs</h1>
      <p class="mt-3 text-lg text-slate-600">
        Install starter bundles that include multiple bloks for common site types.
      </p>
    </header>

    {presets.length === 0 ? (
      <div class="glass-card p-12 text-center text-slate-500">No presets have been added yet.</div>
    ) : (
      <div class="grid gap-5 sm:grid-cols-2 xl:grid-cols-3">
        {presets.map((entry) => (
          <PackageCard entry={entry} href={`/presets/${extractSlug(entry.path)}`} kind="preset" />
        ))}
      </div>
    )}
  </section>
</BaseLayout>
