---
import PackageLayout from '../../layouts/PackageLayout.astro';
import CodeBlock from '../../components/CodeBlock.astro';
import {
  extractSlug,
  getComponents,
  getPackageDetails,
  type PackageEntry
} from '../../lib/registry';

interface Props {
  entry: PackageEntry;
}

export function getStaticPaths() {
  return getComponents().map((entry) => ({
    params: { slug: extractSlug(entry.path) },
    props: { entry }
  }));
}

const { entry } = Astro.props as Props;
const details = getPackageDetails(entry.path);
const manifest = details.manifest as Record<string, any> | null;
const schema = details.schema as Record<string, any> | null;
const fields = schema && typeof schema.schema === 'object' ? Object.entries(schema.schema as Record<string, any>) : [];
const installCommand = `bloktastic add ${entry.name}`;
---

<PackageLayout title={entry.title} description={(manifest?.description as string) ?? entry.title}>
  <nav class="mb-8 text-sm font-semibold text-slate-500">
    <a href="/components" class="hover:text-graphite">Bloks</a>
    <span class="mx-2">/</span>
    <span class="text-graphite">{entry.name}</span>
  </nav>

  <header class="mb-8 grid gap-4 lg:grid-cols-[1fr_auto]">
    <div>
      <p class="mb-3 inline-flex rounded-full bg-paper px-3 py-1 text-xs font-bold uppercase tracking-[0.12em] text-slate-600">
        {entry.category ?? 'component'}
      </p>
      <h1 class="font-display text-4xl font-extrabold text-graphite">{entry.title}</h1>
      <p class="mt-3 max-w-3xl text-slate-600">{manifest?.description ?? 'No description available.'}</p>
      {entry.tags && entry.tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {entry.tags.map((tag) => (
            <span class="rounded-md bg-slate-100 px-2 py-1 text-xs font-medium text-slate-600">#{tag}</span>
          ))}
        </div>
      )}
    </div>

    <aside class="glass-card h-fit p-5 text-sm">
      <p class="text-xs font-bold uppercase tracking-[0.12em] text-slate-500">Quick install</p>
      <code class="mt-2 block rounded-lg bg-slate-900 px-3 py-2 font-mono text-xs text-emerald-300">{installCommand}</code>
      <button
        type="button"
        class="btn-secondary mt-3 w-full"
        data-copy={installCommand}
      >
        Copy Command
      </button>
    </aside>
  </header>

  <div class="grid gap-8 xl:grid-cols-[1.6fr_0.9fr]">
    <div class="space-y-8">
      {schema && <CodeBlock title="Storyblok Schema" language="json" code={JSON.stringify(schema, null, 2)} />}
      {details.prompt && <CodeBlock title="Generation Prompt" language="md" code={details.prompt} />}
      {details.readme && <CodeBlock title="README" language="md" code={details.readme} />}
    </div>

    <aside class="space-y-6">
      <section class="glass-card p-5">
        <h2 class="mb-3 text-base font-bold text-graphite">Package Info</h2>
        <dl class="space-y-3 text-sm">
          <div>
            <dt class="text-slate-500">Package</dt>
            <dd class="font-semibold text-graphite">{entry.name}</dd>
          </div>
          <div>
            <dt class="text-slate-500">Version</dt>
            <dd class="font-mono text-graphite">{entry.version}</dd>
          </div>
          <div>
            <dt class="text-slate-500">Status</dt>
            <dd class="capitalize text-graphite">{entry.status ?? 'stable'}</dd>
          </div>
          <div>
            <dt class="text-slate-500">Author</dt>
            <dd>
              {manifest?.author?.github ? (
                <a
                  href={`https://github.com/${manifest.author.github}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="font-semibold text-intelligence hover:underline"
                >
                  @{manifest.author.github}
                </a>
              ) : (
                <span class="text-graphite">Unknown</span>
              )}
            </dd>
          </div>
          <div>
            <dt class="text-slate-500">Storyblok</dt>
            <dd class="font-mono text-graphite">{manifest?.compatibility?.storyblok ?? '>=2.0.0'}</dd>
          </div>
        </dl>
      </section>

      {fields.length > 0 && (
        <section class="glass-card p-5">
          <h2 class="mb-3 text-base font-bold text-graphite">Schema Fields</h2>
          <ul class="space-y-2 text-sm">
            {fields.map(([name, data]) => (
              <li class="flex items-center justify-between gap-3 rounded-lg bg-slate-50 px-3 py-2">
                <code class="font-mono text-xs text-intelligence">{name}</code>
                <span class="text-xs font-semibold text-slate-600">{(data as any)?.type ?? 'unknown'}</span>
              </li>
            ))}
          </ul>
        </section>
      )}

      {manifest?.dependencies?.bloktastic?.length > 0 && (
        <section class="glass-card p-5">
          <h2 class="mb-3 text-base font-bold text-graphite">Dependencies</h2>
          <ul class="space-y-2 text-sm">
            {manifest?.dependencies?.bloktastic?.map((dep: string) => (
              <li>
                <a href={`/components/${dep.split('/').pop()}`} class="text-intelligence hover:underline">
                  {dep}
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}
    </aside>
  </div>

  <script>
    document.querySelectorAll('[data-copy]').forEach((button) => {
      button.addEventListener('click', async () => {
        const value = button.getAttribute('data-copy');
        if (!value) return;
        await navigator.clipboard.writeText(value);
        const original = button.textContent;
        button.textContent = 'Copied';
        setTimeout(() => {
          button.textContent = original;
        }, 1600);
      });
    });
  </script>
</PackageLayout>
