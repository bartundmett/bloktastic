{
  "$bloktastic": {
    "version": "1.0.0"
  },
  "name": "cta_banner",
  "display_name": "CTA Banner",
  "is_root": false,
  "is_nestable": true,
  "schema": {
    "headline": {
      "type": "text",
      "pos": 0,
      "display_name": "Headline",
      "description": "Banner heading",
      "required": true
    },
    "subline": {
      "type": "textarea",
      "pos": 1,
      "display_name": "Subline",
      "description": "Supporting copy"
    },
    "primary_cta": {
      "type": "bloks",
      "pos": 2,
      "display_name": "Primary CTA",
      "description": "Primary CTA button",
      "required": true,
      "restrict_components": true,
      "component_whitelist": [
        "button"
      ],
      "maximum": 1
    },
    "secondary_cta": {
      "type": "bloks",
      "pos": 3,
      "display_name": "Secondary CTA",
      "description": "Optional secondary CTA button",
      "restrict_components": true,
      "component_whitelist": [
        "button"
      ],
      "maximum": 1
    },
    "style": {
      "type": "option",
      "pos": 4,
      "display_name": "Style",
      "default_value": "gradient",
      "options": [
        {
          "name": "Gradient",
          "value": "gradient"
        },
        {
          "name": "Outline",
          "value": "outline"
        },
        {
          "name": "Solid",
          "value": "solid"
        }
      ],
      "description": "Visual treatment"
    }
  },
  "preview_field": "headline"
}
